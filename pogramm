ln = 0
element = ','
with open("text.txt", "r") as F:
    for line in F:
        print("Данное число: ", line.strip())
        if element in line:
            ln = (len(line))-3
        else:
            ln = (len(line))-2
        if ln != 0 and ln>0:
            print ("Его длина без пробелов и запятых -  | ", ln, " | \n")


    print ("...\n Файл имитирует бесконечную последовательность")
