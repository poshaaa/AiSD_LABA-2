import time

element1 = ','
element2 = '.'
k=0
with open('text.txt') as file:
    for i in file.read():                #считываем каждый строчный символ в файле  ( БУДУ ИСПРАВЛЯТЬСЯ, Т.К. ВО ВРЕМЯ ЛАБЫ ПОНЯЛА, ЧТО НЕ НУЖНО СЧИТЫВАТЬ ВЕСЬ ФАЙЛ)
        if i.isnumeric() == True:        #если символ является цифрой, то
            k=k+1                        #увеличиваем значение длины числа
        elif i == '.' or i == ',' or i == '-':       #если число дробное, то
            k=k+0                        #чтобы не учитывать '.' или  ',' в длину строки, не меняем счетчик
        else:                            #если символ не является цифрой, то
            print ("Длина числа:  ", k, "\n") #выводим значение длины данного числа
            k = 0                        #обнуляем счетчик для нового числа

print("Время работы программы:  ", time.process_time(), "seconds")
