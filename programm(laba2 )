k = 1                                                                                             # счетчик длины числа 
array_result = []                                                                                 # массив для вывода результата
buffer_len = 1                                                                                    # размер буфера чтения
maXK = 0                                                                                          # максимальная длина 
dot_flag = False
try:
    with open("text.txt", "r") as file:                                                           # открываем файл
        buffer = file.read(buffer_len)                                                            # читаем первый блок

        while buffer:                                                                             # пока файл не пустой
            while (buffer < '0' or buffer > '9') and buffer!='.' and buffer!=',' and buffer:      # ищем цифры
                buffer = file.read(buffer_len)                                                    # читаем очередной блок

            while (buffer >= '0' and buffer <= '9') or (buffer =='.' or buffer ==',') and buffer:     # обрабатываем цифры                                                 
                if buffer ==',' or buffer=='.':
                    dot_flag=True
                elif buffer >= '0' and buffer <='9':
                    k+=1
                buffer = file.read(buffer_len)
                position += 1
                if (buffer =='.' or buffer ==',') and buffer and dot_flag:
                    print("встретилось число с несколькими символами "." или ",")
                    break
                                                                           # если символ не является цифрой, то
                if k > 0:
                    if k in array_len:
                        ind=array_len.index(k)
                        array_qv(ind)+=1
                    else:
                        array_len.append(k)
                        array_qv.append(1)                                   # выводим значение длин чисел
                    
                    print(array_len)                                                                       # возвращаем счетчику исходное значение для нового числа
                    print(array_qv)
                    k=0                                                                  # ищем максимальную длину числа для дальнейшего вывода
                    dot_flag = False
        
        if (array_len)>0: 
            for i in range(len(array_len)):                                                                # считаем в цикле кол-во каждого из встретившихся значений длины                                                              в данном файле
                print("Чисел длиной", array_len(i), ":", array_qv(i), "шт", end=' ')
        else:
            print('В файле нет чисел')
                                                                   
except FileNotFoundError:
    print("\nФайл text.txt в директории проекта не обнаружен.\nДобавьте файл в директорию или переименуйте существующий *.txt файл.")
